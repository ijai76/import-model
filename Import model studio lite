-- Buat ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = game.CoreGui -- Menggunakan CoreGui untuk Game Studio Lite

-- Buat ImageLabel untuk menampilkan gambar
local imageLabel = Instance.new("ImageLabel")
imageLabel.Size = UDim2.new(0, 400, 0, 250) -- Sesuaikan ukuran
imageLabel.Position = UDim2.new(0.5, -200, 0.2, 0) -- Posisi di tengah
imageLabel.Image = "https://iili.io/2y2FBuS.jpg" -- Menggunakan URL gambar
imageLabel.Parent = screenGui

-- Buat tombol insert model
local insertButton = Instance.new("TextButton")
insertButton.Size = UDim2.new(0, 200, 0, 50)
insertButton.Position = UDim2.new(0.5, -100, 0.5, 0)
insertButton.Text = "Insert Model"
insertButton.Parent = screenGui

-- Buat tombol keluar
local exitButton = Instance.new("TextButton")
exitButton.Size = UDim2.new(0, 200, 0, 50)
exitButton.Position = UDim2.new(0.5, -100, 0.6, 0)
exitButton.Text = "Keluar"
exitButton.Parent = screenGui

-- Fungsi untuk insert model
local function insertModel(modelId)
    local model = game:GetService("InsertService"):LoadAsset(modelId)
    model.Parent = game.Workspace
end

-- Event ketika tombol Insert Model ditekan
insertButton.MouseButton1Click:Connect(function()
    local modelId = tonumber(game:GetService("Players").LocalPlayer:WaitForChild("PlayerGui"):FindFirstChild("ScreenGui"):FindFirstChild("InsertBox").Text)
    if modelId then
        insertModel(modelId)
    else
        print("ID Model tidak valid!")
    end
end)

-- Event ketika tombol keluar ditekan
exitButton.MouseButton1Click:Connect(function()
    screenGui:Destroy()
end)

