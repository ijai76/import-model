-- ap.lua
local Rayfield = loadstring(game:HttpGet("https://raw.githubusercontent.com/shlexware/Rayfield/main/source.lua"))()

local Window = Rayfield:CreateWindow({
    Name = "Model Loader | Studio Lite",
    LoadingTitle = "Loading...",
    LoadingSubtitle = "Just for Education",
    ConfigurationSaving = {
        Enabled = false,
    },
    Discord = {
        Enabled = false,
    },
    KeySystem = false,
})

local MainTab = Window:CreateTab("Import", 4483362458)

MainTab:CreateInput({
    Name = "Masukkan ID Model",
    PlaceholderText = "contoh: 1234567890",
    RemoveTextAfterFocusLost = false,
    Callback = function(ModelID)
        local success, model = pcall(function()
            return game:GetService("InsertService"):LoadAsset(tonumber(ModelID))
        end)

        if success and model then
            model.Parent = workspace
            Rayfield:Notify({
                Title = "Berhasil",
                Content = "Model berhasil dimasukkan ke Workspace!",
                Duration = 5,
            })
        else
            Rayfield:Notify({
                Title = "Gagal",
                Content = "Gagal memuat model. Periksa ID atau pastikan kamu di Studio mode.",
                Duration = 5,
            })
        end
    end,
})
